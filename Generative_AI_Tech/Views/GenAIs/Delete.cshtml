<section class="delete-section pt-4">
    <h1 class="mt-4">Delete GenAI Website</h1>
    <h3>Are you sure you want to delete this website?</h3>
    <div class="row">
        <div class="col-lg-4 col-sm-6">
            <p>GenAI Name</p>
        </div>
        <div class="col-lg-8 col-sm-6"><p>@Model.GenAiSites[0]?.Site_Name</p></div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-sm-6"><p>Summary</p></div>
        <div class="col-lg-8 col-sm-6"><p>@Model.GenAiSites[0]?.Summary</p></div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-sm-6"><p>Image File Name</p></div>
        <div class="col-lg-8 col-sm-6"><p>@Model.GenAiSites[0]?.Image_Name</p></div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-sm-6"><p>Anchor link</p></div>
        <div class="col-lg-8 col-sm-6"><p>Home/GenAISites#@Model.GenAiSites[0]?.Site_Name</p></div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-sm-6"><p>Likes</p></div>
        <div class="col-lg-8 col-sm-6"><p>@Model.GenAiSites[0]?.Likes</p></div>
    </div>
    <div class="d-flex mt-4">
        <a class="btn btn-danger m-2" href="/Home/DeleteWebsite?Id=@Model.GenAiSites[0]?.Id">Delete</a>
        <a href="/Home/GenAISites" class="m-2">Back to GenAI Websites</a>
    </div>
</section>
